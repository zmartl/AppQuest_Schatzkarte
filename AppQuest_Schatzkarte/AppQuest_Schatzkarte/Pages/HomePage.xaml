<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuest_Schatzkarte.Pages.HomePage"
             Title="AppQuest_Schatzkarte">
  <ContentPage.ToolbarItems>
	<ToolbarItem Text="locate" Icon="locate.png" Clicked="OnLocateClicked" />
    <ToolbarItem Text="pin" Icon="pin.png" Clicked="OnAddNewPinClicked" />
    <ToolbarItem Clicked="OnSyncButtonClicked" Order="Secondary" Priority="0" Text="Send to server" />
	<ToolbarItem Clicked="OnAllPinsButtonClicked" Order="Secondary" Priority="1" Text="List all Pins" />
  </ContentPage.ToolbarItems>
</ContentPage>